
@{
    ViewBag.Title = "NewGame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewGame</h2>
<p>
    Bulls and Cows is a guessing game. Think of a number, try to guess ur opponent's. Number size is 4 digits.
</p>
<p><a class="btn btn-primary" href="https://en.wikipedia.org/wiki/Bulls_and_Cows">Read more</a></p>
@using (Html.BeginForm("New", "Game", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{   
<div class="form-group">
    <label for="number" class="control-label col-md-2">Secret number</label>
    <div class="col-md-10">
        <input name="number" class="form-control" />
    </div>
</div>
<div class="form-group">
    <input type="submit" class="btn btn-success" />
</div>
}





