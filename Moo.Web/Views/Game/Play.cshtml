@model Moo.Entities.ViewModels.Game.GameViewModel
@{
    ViewBag.Title = "Play";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Play</h2>
<div class="row">
    <div class="col-md-4">
        <div class="turns">
        @foreach (var turn in Model.UserTurns)
        {
            Html.Partial("_Turn", turn);
        }
        </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
    @using (Html.BeginForm(Model.FormAction, "Game", FormMethod.Post))
    {
        var labelAttributes = new { @class = "control-label col-md-2" };
        string buttonValue;
        object bullsAndCowsAttribues;
        object guessAttributes;
        switch (Model.FormAction)
        {
            case Moo.Controllers.GameController.USER_GUESS:
                buttonValue = "Guess";
                bullsAndCowsAttribues = new { @class = "form-control disabled", @readonly = "true", type = "number" };
                guessAttributes = new { @class = "form-control" };
                break;
            case Moo.Controllers.GameController.USER_RESPONSE:
                buttonValue = "End round";
                bullsAndCowsAttribues = new { @class = "form-control", type = "number" };
                guessAttributes = new { @class = "form-control disabled", @readonly = "true" };
                break;
            default:  // "OpponentGuess"
                buttonValue = "Opponent turn";
                bullsAndCowsAttribues = new { @class = "form-control disabled", @readonly = "true" };   
                guessAttributes = new { @class = "form-control disabled", @readonly = "true" };
                break;
        }
        <div class="form-group">
            @Html.LabelFor(model => model.Guess, labelAttributes);
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Guess, guessAttributes)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Bulls, labelAttributes)
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Bulls, bullsAndCowsAttribues)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cows, labelAttributes)
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Cows, bullsAndCowsAttribues)
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@buttonValue" />
        </div>
    }
    </div>
    <div class="col-md-4 col-md-offset-8">
    @foreach (var turn in Model.OpponentTurns)
    {
        @Html.Partial("_Turn", turn)
    }
    </div>
</div>